<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llt_layout"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/toolbar_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/ic_format_bold_white_24dp" />

            <ImageView
                android:id="@+id/iv_italic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/ic_format_italic_white_24dp" />

            <ImageView
                android:id="@+id/iv_underlined"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/ic_format_underlined_white_24dp" />

            <ImageView
                android:id="@+id/iv_strikethrough"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/ic_strikethrough_s_white_24dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llt_layout"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/ic_toolbar_jt" />

    </LinearLayout>

</RelativeLayout>
